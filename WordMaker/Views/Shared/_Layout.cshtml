<!DOCTYPE html>
<html ng-app ="wordMakerApp">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>

    <body ng-cloak>
        <div ng-controller="layout-controller" class="navbar navbar-inverse navbar-fixed-top">
            <div>
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("СЛОВОДЕЛ", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="navbar-brand btn-link" ng-click="openRegisterModal(true)">Регистрация</li>
                        <li class="navbar-brand btn-link" ng-click="openRegisterModal(false)">Аутентификация</li>
                        <li class="navbar-brand btn-link" ng-show="player.userName" ng-click="logout()">Выйти</li>
                        <li class="navbar-brand" ng-show="player.userName">Удачной игры, {{player.userName}}!</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Словодел</p>
            </footer>
        </div>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/angular")
        @RenderSection("scripts", required: false)
    </body>
</html>
